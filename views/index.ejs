<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MATTR Demo App</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- custom styles -->
    <link rel="stylesheet" href="styles.css" />
  </head>

  <body class="bg-light">
    <main>
      <div class="container" style="max-width: 1200px">
        <header class="mb-5 p-3">
          <h6 class="display-6 text-center">MATTR Demo App</h6>
          <hr class="bg-dark" />
        </header>
        <div class="row">
          <!-- step 1: issue -->
          <div class="col-12 col-md-6">
            <div
              class="d-flex p-3 my-3 text-white rounded shadow-sm bg-secondary"
            >
              <div class="lh-1 mx-3" style="color: Black">
                <h6 class="mb-0 lh-2">Issue Verifiable Credentials</h6>
              </div>
            </div>

            <form id="issueForm" autocomplete="off">
              <div
                class="d-flex flex-column align-items-center justify-content-center shadow-sm border border-secondary my-3 rounded"
                style="min-height: 400px"
              >
                <!-- Generate credential issuer -->
                <div class="d-flex justify-content-center p-3">
                  <div
                    class="d-flex flex-column align-items-center justify-content-center rounded border border-dark img-thumbnail"
                    style="width: 260px; height: 260px"
                  >
                    <div
                      id="issueQRLoading"
                      class="spinner-border text-secondary"
                      role="status"
                      hidden
                    >
                      <span class="visually-hidden">Loading...</span>
                    </div>
                    <img id="issueQRImage" width="240px" hidden />
                  </div>
                </div>
                <div class="mt-3 px-3">
                  <p style="color: #808080">
                    <small>
                      Scan the QR code from your mobile Mattr wallet to get
                      verifiable credentials.
                    </small>
                  </p>
                </div>
              </div>
            </form>
          </div>

          <!-- step 2: verify -->
          <div class="col-12 col-md-6">
            <div
              class="d-flex p-3 my-3 text-white rounded shadow-sm bg-primary"
            >
              <div class="lh-1 mx-3" style="color: Black">
                <h6 class="mb-0 lh-2">Verify Credentials</h6>
              </div>
            </div>

            <form id="verifyForm" autocomplete="off">
              <div
                class="d-flex flex-column align-items-center justify-content-center shadow-sm border border-primary my-3 rounded"
                style="min-height: 400px"
              >
                <!-- Generate credential verifier -->

                <div class="mt-3 px-3">
                  <p style="color: #808080">
                    <small>
                      Scan the QR code from your mobile Mattr wallet to get
                      verify credentials.
                    </small>
                  </p>
                </div>
                <div class="control-pane d-flex justify-content-center m-2">
                  <button
                    type="button"
                    class="btn btn-primary"
                    id="verifyQRCodeButton"
                    data-bs-toggle="modal"
                    data-bs-target="#verifyQRCodeModal"
                  >
                    Get the QR code
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div id="verifyQRCodeModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog modal-fullscreen modal-dialog-centered">
          <div class="modal-content bg-dark" style="opacity: 0.98;">
            <div class="modal-header text-white">
              <h6 id="tss" class="modal-title">Verify using Mattr Wallet</h6>
              <button
                type="button"
                class="btn-close bg-white"
                data-bs-dismiss="modal"
                id="verifyModalClose"
              ></button>
            </div>
            <div class="modal-body d-flex flex-column align-items-center justify-content-center p-3">
              <div
                class="rounded border border-primary border-lg bg-white img-thumbnail d-flex flex-column align-items-center justify-content-center"
                style="width: 260px; height: 260px; opacity: 1;"
              >
                <div
                  id="verifyQRLoading"
                  class="spinner-border text-primary"
                  role="status"
                  hidden
                >
                  <span class="visually-hidden">Loading...</span>
                </div>
                <img id="verifyQRImage" width="240px" hidden />
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- bootstrap js -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <script>
      const user = sessionStorage.getItem('authUser');
      if (user) {
        window.location.href = "http://localhost:4000/claims";
      }
    </script>

    <script type="application/javascript">
      const issueQRCodeModal = document.getElementById("issueQRCodeModal");
      const verifyQRCodeModal = document.getElementById("verifyQRCodeModal");
      const verifyModalClose = document.getElementById("verifyModalClose");

      function handleAuth(data) {
        window.sessionStorage.setItem("authUser", data);
        window.location.href = "http://localhost:4000/claims";
      }

      async function presentIssueQRCode() {
        const qrCode = await fetch("/present/getVerifiableCredentials", {
          method: "GET",
          headers: { "Content-Type": "application/json" },
        });
        document.getElementById("issueQRLoading").hidden = true;
        document.getElementById("issueQRImage").hidden = false;
        qrCode.text().then(function (text) {
          document.getElementById("issueQRImage").src = text;
        });
      }

      let responseId = null;

      async function presentVerifyQRCode() {
        fetch("/present/validateCredentials", {
          method: "GET",
          headers: { "Content-Type": "application/json" },
        })
          .then((res) => res.json())
          .then((res) => {
            console.log(res);
            responseId = res.id;
            document.getElementById("verifyQRLoading").hidden = true;
            document.getElementById("verifyQRImage").hidden = false;
            document.getElementById("verifyQRImage").src = res.qrCode;
          })
          .then((res) => {
            var checkStatus = setInterval(function () {
              fetch("api/verifier/presentation-response?id=" + responseId)
                .then((res) => res.text())
                .catch((err) => console.log(err))
                .then((res) => {
                  if (res.length > 0) {
                    res = JSON.parse(res);
                    // QR Code verified
                    if (res.status == "verified") {
                      console.log(res);
                      handleAuth(JSON.stringify(res.callbackResponse));
                      clearInterval(checkStatus);
                    }
                  }
                });
            }, 1000);
          })
          .catch((err) => console.log(err));
      }

      verifyQRCodeModal.addEventListener("shown.bs.modal", (event) => {
        document.getElementById("verifyQRLoading").hidden = false;
        document.getElementById("verifyQRImage").hidden = true;
        presentVerifyQRCode();
      });

      verifyModalClose.addEventListener("click", (event) => {
        document.getElementById("verifyQRImage").removeAttribute("src");
      });

      document.getElementById("issueQRLoading").hidden = false;
      document.getElementById("issueQRImage").hidden = true;

      presentIssueQRCode();
    </script>
  </body>
</html>
